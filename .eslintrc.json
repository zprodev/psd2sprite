{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [],
  "globals": {},
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": "error",
    "quotes": ["error", "single"],
    "space-before-blocks": ["error", {"functions": "always", "keywords": "always", "classes": "always"}],
    "keyword-spacing": ["error"],
    "no-console": "off"
  }
}